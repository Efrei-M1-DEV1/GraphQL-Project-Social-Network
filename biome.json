{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 130
  },
  "linter": {
    "enabled": true,
    "ignore": ["./backend/src/types.ts"],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsole": "error"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnknownFunction": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "nursery": {
        "useSortedClasses": "warn"
      }
    }
  }
}
